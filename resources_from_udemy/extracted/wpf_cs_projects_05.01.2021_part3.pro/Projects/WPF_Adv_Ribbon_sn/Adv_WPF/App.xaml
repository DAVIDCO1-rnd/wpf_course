<Application
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Adv_WPF"
             xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="Adv_WPF.App"
             StartupUri="Toolbar_Ribbon/wpf_ribbon.xaml" ShutdownMode="OnMainWindowClose">
   
    <Application.Resources>

        <System:Double x:Key="exit_butt_width">55</System:Double>
        <System:Double x:Key="exit_butt_height">45</System:Double>
        <System:String x:Key="exit_butt_text">Exit (ESC)</System:String>
        <SolidColorBrush x:Key="exit_butt_back_color" Color="#FFE6F1D2"/>
        <Cursor x:Key="exit_butt_cursor">Hand</Cursor>
        <System:Double x:Key="load_butt_app_res_butt">132</System:Double>

        <ContextMenu x:Key="app_com_cm" >
            <MenuItem Header="New" Name="com_new_cm"/>
            <MenuItem Header="Edit" Name="com_edit_cm"/>
        </ContextMenu>
        
    </Application.Resources>
    
</Application>
